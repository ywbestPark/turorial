{{>layout/header}}

<!-- Page Content-->
<section class="py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bolder">User</h1>
        <p class="lead fw-normal text-muted mb-0">
            {{#new}}You can create a new user on this page. Please note that an existing user name cannot be used.{{/new}}
            {{^new}}You can edit user information on this page. You can edit the user name, user rights, and email.{{/new}}
        </p>
    </div>
    <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="d-grid mb-3"><a href="/admin/user_list_page">Back to User List</a></div>
                {{#userInfo}}
                    <form name="userInfo" method="POST">
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                        {{#id}}
                            <div class="form-group mb-3">
                                <label for="id">id</label>
                                <input type="text" class="form-control" id="id" name="id" value="{{id}}">
                            </div>
                        {{/id}}
                        <div class="form-group mb-3">
                            <label for="username">username</label>
                            {{#new}}<input type="text" class="form-control" id="username" name="username" value=""/>{{/new}}
                            {{^new}}<input type="text" class="form-control" id="username" name="username" value="{{username}}"/>{{/new}}
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">password</label>
                            <input type="text" class="form-control" id="password" name="password" value="{{#password}}{{password}}{{/password}}"></input>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">email</label>
                            <input type="text" class="form-control" id="email" name="email" value="{{#email}}{{email}}{{/email}}"></input>
                        </div>
                        <div class="form-group mb-3">
                            <label for="role">role</label>
                            <input type="text" class="form-control" id="role" name="role" value="{{#role}}{{role}}{{/role}}"></input>
                        </div>
                        <div class="form-group mb-3">
                            <label for="enable">enable</label>
                            <input type="text" class="form-control" id="enable" name="enable" value="{{#enable}}{{enable}}{{/enable}}"></input>
                        </div>

                        {{#new}}
                            <div class="d-grid mb-3">
                                <input class="btn btn-primary btn-lg" type="submit" value="Save" onclick="javascript: form.action='/admin/user';"/>
                            </div>
                        {{/new}}
                        {{^new}}
                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gridCheck" name="passwordChange" value="true">
                                    <label class="form-check-label" for="gridCheck">
                                        Check if you want to change password
                                    </label>
                                </div>
                            </div>
                            <div class="d-grid mb-3">
                                <input class="btn btn-primary btn-lg" type="submit" value="Update" onclick="javascript: form.action='/admin/user/edit';"/>
                            </div>
                            <div class="d-grid mb-3">
                                <input class="btn btn-danger  btn-lg" type="submit" value="Delete" onclick="javascript: form.action='/admin/user/delete';"/>
                            </div>
                        {{/new}}
                    </form>
                {{/userInfo}}
            </div>
        </div>
    </div>
</section>

{{>layout/footer}}