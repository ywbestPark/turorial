{{>layout/header}}

<!-- Page Content-->
<section class="py-5">
    <!-- Required dataTable -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.1/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.1/js/buttons.colVis.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.1.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/scroller/2.0.5/js/dataTables.scroller.min.js"></script>

    <script type="text/javascript" class="init">
                var table;
                $(document).ready(function() {

                     $("#menuTable").on('click', 'tbody tr', function () {
                        var row = $("#menuTable").DataTable().row($(this)).data();
                        console.log(row);
                    });

                    $('#menuTable').DataTable( {
                        dom: "Blfrtip",
                        buttons: [
                            'copy', 'csv', 'excel', 'pdf', 'print'
                        ],
                        lengthChange: true,
                        lengthMenu: [10,20,30,40,50],
                        displayLength: 20,
                        scrollX: true,
                        ajax : {
                            "url":"/admin/menu",
                            "type":"GET",
                            "data": function (d) { // ajax 호출 시 입력 데이터 정의
                                d.userStatCd = "NR";
                            },
                            // datatables 가 Ajax로 데이터를 가져올 때는 기본적으로 최상위에 "data" 라는 키를 가진 형태이어야함
                            // data를 최상위에 못 넣어 주는 경우 아래와 같이 ""로 선언하여 처음 부터 배열임을 지정해 주면 됨
                            "dataSrc": ""
                        },
                        columns: [
                            { data: "id",
                                "render": function(data, type, row, meta){
                                if(type === 'display'){
                                    data = '<a href="/admin/menu/'+data+'">' +data+ '</a>';
                                }
                                return data;
                            }
                            },
                            { data: "level" },
                            { data: "menuOrder" },
                            { data: "menuName" },
                            { data: "menuPath" },
                            { data: "parentId" },
                            { data: "modifiedDate" },
                            { data: "modifiedBy" },
                            { data: "enable" }
                        ],
                        order: [ [1, 'asc'], [2, 'asc'] ]
                    } );
                } );
    </script>
    <div class="container-fluid my-3">
        <div class="row align-items-center">
            <div class="col col-9">
                <h2>Menu Lists</h2>
            </div>
            <div class="col col-3">
                <a href="/admin/menu_new_page" role="button" class="btn btn-primary btn-sm">Create</a>
            </div>
        </div>
    </div>

    <hr>

    <div class="container-fluid">
        <table id="menuTable" class="display" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>ID</th>
                <th>level</th>
                <th>menuOrder</th>
                <th>menuName</th>
                <th>menuPath</th>
                <th>parentId</th>
                <th>Modified date</th>
                <th>ModifiedBy</th>
                <th>Enable</th>
            </tr>
            </thead>
        </table>
    </div>

</section>

{{>layout/footer}}